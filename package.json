    "eslint-plugin-prettier": "^5.1.2",
    "lerna": "^3.19.0",
    "prettier": "3.0.3",
    "ts-node": "^10.9.0",
    "typescript": "^5.2.0"
  },
  "prettier": {
    "semi": false,
    "printWidth": 120,
