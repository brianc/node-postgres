{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "pretty": true,
    "outDir": "dist",
    "incremental": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "declaration": true,
    "types": [
      "node",
      "pg",
      "mocha",
      "chai"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
