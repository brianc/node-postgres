{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "incremental": true,
    "baseUrl": ".",
    "declaration": true,
    "types": [
      "mocha",
      "node",
      "chai",
      "pg"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
